<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jeffdrake.firstbuildwearablehack.HandleButtonPressActivity">

    <TextView
        android:id="@+id/notification_return_header_id_101"
        android:text="@string/voice_return_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Voice Input"
        android:id="@+id/button_voice_input"
        android:onClick="receiveVoiceInputButton"
        android:layout_gravity="left|top"
        android:layout_below="@id/notification_return_header_id_101"/>/>

    <TextView
        android:id="@+id/notification_return_header_id_102"
        android:text="@+id/TextViewReturnVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_voice_input"/>

</RelativeLayout>
